<!--  team standings -->
<table id="player-profile-table" class="table table-striped table-bordered table-hover table-responsive players-profile-data col-xs-12">
  <tr>
    <th class="content-cell content-header col-xs-1">Rank</th>
    <th class="content-cell content-header col-xs-2">Surname</th>
    <th class="content-cell content-header col-xs-2">Given_name</th>
    <th class="content-cell content-header col-xs-3">Email</th>
    <th class="content-cell content-header col-xs-2">Phone_number</th>
    <th class="content-cell content-header col-xs-1">Captain</th>
    <th class="content-cell content-header col-xs-1">Team</th>
  </tr>
  {{#each players}}
    <tr>
      <td class="standings-cell person-name standings-row col-xs-1">{{rank}}</td>
      <td class="standings-cell person-name standings-row col-xs-2">{{surname}}</td>
      <td class="standings-cell person-name standings-row col-xs-2">{{given_name}}</td>
      <td class="standings-cell person-name standings-row col-xs-3">{{email}}</td>
      <td class="standings-cell person-name standings-row col-xs-2">{{phone_number}}</td>
      <td class="standings-cell person-name standings-row col-xs-1">{{captain}}</td>
      <td class="standings-cell standings-row col-xs-1">{{team_id}}</td>
    </tr>
  {{/each}}
</table>
