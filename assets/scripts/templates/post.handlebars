<!--  team post data -->
<table id="team-post-table" class="table table-striped table-bordered table-hover table-responsive team-post-data col-xs-12">
  <tr>
    <th class="content-cell content-header col-xs-2">Date</th>
    <th class="content-cell content-header col-xs-2">Last Name</th>
    <th class="content-cell content-header col-xs-2">First Name</th>
    <th class="content-cell content-header col-xs-6">Content</th>
  </tr>
  {{#each posts}}
    <tr>
      <td class="standings-cell standings-row col-xs-2">{{updated_at}}</td>
      <td class="standings-cell standings-row col-xs-2">{{player.surname}}</td>
      <td class="standings-cell standings-row col-xs-2">{{player.given_name}}</td>
      <td class="standings-cell standings-row col-xs-6">{{content}}</td>
    </tr>
  {{/each}}
</table>
